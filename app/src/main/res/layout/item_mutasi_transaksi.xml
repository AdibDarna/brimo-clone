<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ContainerMutasi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:flexDirection="column"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.flexbox.FlexboxLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:justifyContent="space_between"
    android:paddingTop="20dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingBottom="20dp"
    app:alignItems="center"

    >

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexDirection="column"
        >
        <TextView
            android:id="@+id/itemMutasiRef"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="MBMB FILLIANNI TO RAGIAN CANDRA TAM"
            android:lines="2"
            android:lineSpacingExtra="2dp"
            app:fontFamily="@font/bri_digital_text_bold"
            android:textSize="14sp"
            android:textColor="@color/blue_grey_900"
            />

    </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexDirection="column"
        app:alignItems="flex_end"
        >
        <TextView
            android:id="@+id/itemMutasiNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Rp50.000,00"
            app:fontFamily="@font/bri_digital_text_bold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/blue_grey_900"
            />
        <TextView
            android:id="@+id/itemMutasiJam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:49:10 WIB"
            app:fontFamily="@font/bri_digital_text_medium"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/blue_grey_500"
            />
    </com.google.android.flexbox.FlexboxLayout>

</com.google.android.flexbox.FlexboxLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/divider_grey"
        />
</com.google.android.flexbox.FlexboxLayout>